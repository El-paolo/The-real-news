<p style="color: green"><%= notice %></p>

<%= render @comment %>

<div>
  <%= link_to "Back to comments", report_comments_path(@report.id) %>
    <% if @comment.user_id == current_user.id || current_user.role == 2 %>
      |<%= link_to "Edit this comment", edit_report_comment_path(@report.id, @comment.id) %>|
      <%= button_to "Destroy this comment", report_comment_path(@report.id, @comment.id), method: :delete %>
    <% end %>
</div>
